{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WireGuard Config Generator",
  "version": "0.1.4",
  "identifier": "net.pyer.wireguard-config-generator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "WireGuard配置生成器",
        "width": 850,
        "height": 800,
        "minWidth": 850,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "zh-Hans.lproj"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}
